<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>upload</servlet-name>
        <servlet-class>design.upload</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>download</servlet-name>
        <servlet-class>design.download</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>mail</servlet-name>
        <servlet-class>design.mail</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>userdwnaction</servlet-name>
        <servlet-class>design.userdwnaction</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>userdwnld</servlet-name>
        <servlet-class>design.userdwnld</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>upload</servlet-name>
        <url-pattern>/upload</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>download</servlet-name>
        <url-pattern>/download</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>mail</servlet-name>
        <url-pattern>/mail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>userdwnaction</servlet-name>
        <url-pattern>/userdwnaction</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>userdwnld</servlet-name>
        <url-pattern>/userdwnld</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
